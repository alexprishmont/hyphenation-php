{% macro show(currentPage, pages, pageName = "patterns") %}
<div class="col-md-12">
        <nav aria-label="Page navigation">
            <ul class="pagination">
                <li class="page-item">
                    {% if currentPage - 1 <= 0 %}
                    <a class="page-link" href="/visma-internship/{{ pageName }}">
                        Previous
                    </a>
                    {% else %}
                    <a class="page-link" href="/visma-internship/{{ pageName }}/{{ currentPage - 1 }}">
                        Previous
                    </a>
                    {% endif %}
                </li>
                <li class="page-item">
                    <a class="page-link" aria-disabled="true" href="#">
                        {{ currentPage }} / <b>{{ pages }}</b>
                    </a>
                </li>
                <li class="page-item">
                        {% if currentPage + 1 >= pages %}
                        <a class="page-link" href="/visma-internship/{{ pageName }}/{{ pages }}">
                            Next
                        </a>
                        {% else %}
                        <a class="page-link" href="/visma-internship/{{ pageName }}/{{ currentPage + 1 }}">
                            Next
                        </a>
                        {% endif %}
                </li>
            </ul>
        </nav>
    </div>
{% endmacro %}