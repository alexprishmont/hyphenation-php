{% extends "layouts/app.html.twig" %}

{% import "macros/alerts.html.twig" as alert %}

{% block title %}Patterns | Create{% endblock %}

{% block content %}


{% if failure == true %}
    {{ alert.error() }}
{% endif %}

{% if success == true %}
    {{ alert.success("pattern", body) }}
{% endif %}

<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div class="form-group">
                <label for="pattern">Pattern: </label>
                <input type="text" class="form-control" placeholder="Pattern" id="pattern" name="pattern"/>
            </div>
            <div class="form-group">
                <button type="submit" class="form-control btn btn-success">CREATE</button>
            </div>
        </form>
    </div>
</div>

{% endblock %}
